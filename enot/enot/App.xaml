<Application x:Class="enot.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:enot"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="TxbStyle">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="#7d1fb8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="#d8c2ff"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button" x:Key="BtnStyle">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value= "#5f168c" />
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="#d8c2ff"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TxtBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value= "#f8f8ff" />
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="#5f168c"/>
        </Style>
        <Style TargetType="PasswordBox" x:Key="PassBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value= "#f8f8ff" />
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="#5f168c"/>
        </Style>
    </Application.Resources>
</Application>
